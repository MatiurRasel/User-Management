@model IEnumerable<UserManagement.MVC.Models.UserListViewModel>
@{
    ViewData["Title"] = "User Management";
    var pageNumber = ViewBag.PageNumber;
    var totalPages = ViewBag.TotalPages;
    var searchTerm = ViewBag.SearchTerm;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>User Management</h2>
        <a href="#" class="btn btn-primary">Add New User</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Index" method="get" class="mb-4">
                <div class="row">
                    <div class="col-md-10">
                        <input type="text" name="searchTerm" value="@searchTerm" class="form-control" placeholder="Search by name or email..." />
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-primary w-100">Search</button>
                    </div>
                </div>
            </form>

            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Roles</th>
                            <th>Status</th>
                            <th>Created</th>
                            <th>Last Login</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.FullName</td>
                                <td>
                                    @user.Email
                                    @if (user.EmailConfirmed)
                                    {
                                        <i class="bi bi-check-circle-fill text-success" title="Email Verified"></i>
                                    }
                                </td>
                                <td>@(user.PhoneNumber ?? "N/A")</td>
                                <td>
                                    @foreach (var role in user.Roles.Split(", "))
                                    {
                                        <span class="badge bg-info">@role</span>
                                    }
                                </td>
                                <td>
                                    @if (user.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Inactive</span>
                                    }
                                </td>
                                <td>@user.CreatedAt.ToString("MM/dd/yyyy")</td>
                                <td>@(user.LastLoginDate?.ToString("MM/dd/yyyy HH:mm") ?? "Never")</td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a href="#" class="btn btn-outline-primary" title="View">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a href="#" class="btn btn-outline-warning" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        @if (user.IsActive)
                                        {
                                            <button class="btn btn-outline-danger" title="Deactivate">
                                                <i class="bi bi-x-circle"></i>
                                            </button>
                                        }
                                        else
                                        {
                                            <button class="btn btn-outline-success" title="Activate">
                                                <i class="bi bi-check-circle"></i>
                                            </button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (totalPages > 1)
            {
                <nav aria-label="User pagination">
                    <ul class="pagination justify-content-center">
                        <li class="page-item @(pageNumber <= 1 ? "disabled" : "")">
                            <a class="page-link" asp-action="Index" asp-route-pageNumber="@(pageNumber - 1)" asp-route-searchTerm="@searchTerm">Previous</a>
                        </li>

                        @for (int i = 1; i <= totalPages; i++)
                        {
                            <li class="page-item @(i == pageNumber ? "active" : "")">
                                <a class="page-link" asp-action="Index" asp-route-pageNumber="@i" asp-route-searchTerm="@searchTerm">@i</a>
                            </li>
                        }

                        <li class="page-item @(pageNumber >= totalPages ? "disabled" : "")">
                            <a class="page-link" asp-action="Index" asp-route-pageNumber="@(pageNumber + 1)" asp-route-searchTerm="@searchTerm">Next</a>
                        </li>
                    </ul>
                </nav>
            }
        </div>
    </div>
</div>
