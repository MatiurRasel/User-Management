@model UserManagement.MVC.Models.ProfileViewModel
@{
    ViewData["Title"] = "My Profile";
}

<div class="container mt-4">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    @if (!string.IsNullOrEmpty(Model.ProfilePicture))
                    {
                        <img src="@Model.ProfilePicture" alt="Profile Picture" class="rounded-circle mb-3" style="width: 150px; height: 150px; object-fit: cover;" />
                    }
                    else
                    {
                        <div class="bg-secondary rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 150px; height: 150px;">
                            <i class="bi bi-person-fill text-white" style="font-size: 4rem;"></i>
                        </div>
                    }

                    <h4 class="mb-1">@Model.FirstName @Model.LastName</h4>
                    <p class="text-muted mb-3">@Model.Email</p>

                    <div class="d-grid gap-2">
                        <a asp-action="Edit" class="btn btn-primary">Edit Profile</a>
                        <a asp-action="ChangePassword" asp-controller="Account" class="btn btn-outline-secondary">Change Password</a>
                    </div>

                    <hr class="my-3" />

                    <div class="text-start">
                        <p class="mb-2">
                            <strong>Status:</strong>
                            @if (Model.EmailConfirmed)
                            {
                                <span class="badge bg-success">Email Verified</span>
                            }
                            else
                            {
                                <span class="badge bg-warning">Email Not Verified</span>
                            }
                        </p>
                        <p class="mb-2">
                            <strong>2FA:</strong>
                            @if (Model.TwoFactorEnabled)
                            {
                                <span class="badge bg-success">Enabled</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Disabled</span>
                            }
                        </p>
                        <p class="mb-2">
                            <strong>Roles:</strong>
                            @foreach (var role in Model.Roles)
                            {
                                <span class="badge bg-info">@role</span>
                            }
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Personal Information</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Email:</strong>
                            <p>@Model.Email</p>
                        </div>
                        <div class="col-md-6">
                            <strong>Phone Number:</strong>
                            <p>@(Model.PhoneNumber ?? "Not provided")</p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Date of Birth:</strong>
                            <p>@(Model.DateOfBirth?.ToString("MMMM dd, yyyy") ?? "Not provided")</p>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Bio))
                    {
                        <div class="mb-3">
                            <strong>Bio:</strong>
                            <p>@Model.Bio</p>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.Address))
                    {
                        <hr />
                        <h6 class="mb-3">Address Information</h6>

                        <div class="mb-3">
                            <strong>Address:</strong>
                            <p>@Model.Address</p>
                            <p>@Model.City, @Model.State @Model.PostalCode</p>
                            <p>@Model.Country</p>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.Website) || !string.IsNullOrEmpty(Model.LinkedInProfile) || !string.IsNullOrEmpty(Model.GitHubProfile))
                    {
                        <hr />
                        <h6 class="mb-3">Social Links</h6>

                        @if (!string.IsNullOrEmpty(Model.Website))
                        {
                            <p><strong>Website:</strong> <a href="@Model.Website" target="_blank">@Model.Website</a></p>
                        }
                        @if (!string.IsNullOrEmpty(Model.LinkedInProfile))
                        {
                            <p><strong>LinkedIn:</strong> <a href="@Model.LinkedInProfile" target="_blank">@Model.LinkedInProfile</a></p>
                        }
                        @if (!string.IsNullOrEmpty(Model.GitHubProfile))
                        {
                            <p><strong>GitHub:</strong> <a href="@Model.GitHubProfile" target="_blank">@Model.GitHubProfile</a></p>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>